<h1><%= @cocktail.name %></h1>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description %> - (<%= dose.ingredient.name %>)
      <span class="btn btn-danger">
        <%= link_to "delete", dose_path(dose),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
      </span>
    </li>
  <% end %>
</ul>

<div>
  <%= render 'doses/form', dose: @dose %>
</div>
